<?xml version="1.0" encoding="utf-8"?>
<com.example.hetzi_beta.RoundedCornerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:background="@color/White"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/logo_CircularImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_shop_logo"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        />

    <ImageView
        android:id="@+id/shop_cover_photo_ImageView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/default_shop_background_photo4"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@color/Black_Transparent"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/shop_name_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_CircularImageView"
        android:text="@string/shop_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/shop_address_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="כתובת החנות"
        android:layout_below="@id/shop_name_TextView"
        android:textColor="@color/Black"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shop_address_TextView"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/gps_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/baseline_room_primarydark_48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/distance_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5"
            android:layout_toLeftOf="@id/gps_icon"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/distance_units_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" קילומטר"
            android:layout_toLeftOf="@id/distance_TextView"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="italic"
            android:textSize="10sp"
            />

    </RelativeLayout>


</com.example.hetzi_beta.RoundedCornerLayout>