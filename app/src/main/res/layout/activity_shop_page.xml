<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Shops.ShopPageActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <fragment class="com.example.hetzi_beta.Shops.EditShopFragment"
            android:id="@+id/shop_page_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <fragment class="com.example.hetzi_beta.Offers.EditableOffersListFragment"
            android:id="@+id/offers_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </LinearLayout>
</ScrollView>
