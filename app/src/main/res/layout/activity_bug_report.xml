<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="350dp"
    tools:context=".Utils.BugReportActivity">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blush_emoji"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/oopsi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/oops"
        android:layout_below="@id/pic"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/Black"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="טעות שלנו. נראה שהתרחשה שגיאה כלשהי."
        android:layout_below="@id/oopsi_text"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="לא פעם ראשונה שזה קורה? תאר\י לנו את הבעיה בקצרה, זה מאוד יעזור לפתור אותה"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <EditText
        android:layout_below="@id/text2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/send_FancyButton"
        fancy:fb_text="שלח"

        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        fancy:fb_textSize="10sp"
        fancy:fb_textColor="@color/White"
        fancy:fb_defaultColor="@color/colorDiscount"
        fancy:fb_fontIconSize="15dp"
        fancy:fb_radius="20dp"
        />

</RelativeLayout>